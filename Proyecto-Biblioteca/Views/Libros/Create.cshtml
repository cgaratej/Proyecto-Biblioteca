@model Proyecto_Biblioteca.Models.Libros
@{
    ViewData["Title"] = "Crear Libro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear Nuevo Libros</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="name" class="control-label"></label>
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="autor" class="control-label"></label>
                    <input asp-for="autor" class="form-control" />
                    <span asp-validation-for="autor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="description" class="control-label"></label>
                    <input asp-for="description" class="form-control" />
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="linkVideo" class="control-label"></label>
                    <input asp-for="linkVideo" class="form-control" />
                    <span asp-validation-for="linkVideo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="File" class="col-form-label"></label>
                    <input asp-for="File" type="file" class="form-control" required/>
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
                <div class="from-group">
                    <input type="submit" value="Crear Libro" class="btn btn-primary" />
                </div>
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.Message
                    </div>
                }
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ <partial name="_ValidationScriptsPartial" />}
}
